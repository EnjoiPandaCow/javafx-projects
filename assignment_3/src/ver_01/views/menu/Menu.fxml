<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@../../styles/application_style.css"
            fx:controller="ver_01.views.menu.Menu"
            prefHeight="400.0" prefWidth="600.0">
    <center>
        <VBox>
            <children>
                <StackPane prefHeight="65.0" prefWidth="600.0" styleClass="menuHead">
                    <children>
                        <Label text="Welcome To The Towers of Hanoi">
                            <font>
                                <Font name="Didact Gothic" size="20.0"/>
                            </font>
                        </Label>
                    </children>
                </StackPane>
                <HBox alignment="CENTER" prefHeight="306.0" prefWidth="600.0" spacing="20.0" styleClass="menuBox"
                      BorderPane.alignment="CENTER">
                    <children>
                        <Button fx:id="newGameBtn" mnemonicParsing="false" onAction="#startNewGame" text="New Game"/>
                        <Button fx:id="loadGameBtn" mnemonicParsing="false" onAction="#loadGame" text="Load Game"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
    <top>
        <StackPane prefHeight="32.0" prefWidth="600.0" styleClass="menuTopStack"
                   stylesheets="@../../styles/application_style.css" BorderPane.alignment="CENTER">
            <children>
                <Label text="" StackPane.alignment="CENTER">
                    <padding>
                        <Insets left="5.0"/>
                    </padding>
                </Label>
            </children>
        </StackPane>
    </top>

</BorderPane>
